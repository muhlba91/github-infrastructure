{
  "name": "@muhlba91/github-infrastructure",
  "version": "0.0.0",
  "description": "GitHub Infrastructure",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "repository": "https://github.com/muhlba91/github-infrastructure",
  "license": "MIT",
  "keywords": [
    "pulumi",
    "github",
    "infrastructure"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "fix": "run-s fix:prettier fix:lint",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint --fix",
    "lint": "eslint",
    "watch:build": "tsc -p tsconfig.json -w",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --json build/docs/typedoc.json"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "yarn@4.10.2",
  "dependencies": {
    "@pulumi/aws": "^7.0.0",
    "@pulumi/gcp": "^9.0.0",
    "@pulumi/github": "^6.0.0",
    "@pulumi/pulumi": "^3.69.0",
    "@pulumi/random": "^4.14.0",
    "@pulumi/tailscale": "^0.22.0",
    "@pulumi/vault": "^7.0.0",
    "@pulumiverse/time": "^0.1.0",
    "@types/nunjucks": "^3.2.6",
    "nunjucks": "^3.2.4",
    "yaml": "^2.3.2"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@types/node": "^22.7.6",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-functional": "^9.0.0",
    "eslint-plugin-import": "^2.29.1",
    "npm-run-all2": "^8.0.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.12.1"
  },
  "prettier": {
    "singleQuote": true
  }
}
